package my.verifications

import my.functions.nonBlank

verification NonEmptyString {
  "The string must not be empty"
  (string: String) => {
    string.nonEmpty()
  }
}

verification NonBlank {
  "The string is blank /* quoted comment */"
  (string: String) => {
    nonBlank(string)
  }
}

verification PhoneNumber {
  "Please provide a valid phone number"
  (string: String) => {
    if (string.nonEmpty()) {
      if (string.startsWith("+33")) {
        string.matches("^\+33\d{9}$")
      } else {
        string.matches("^0\d{9}$")
      }
    } else {
      false
    }
  }
}

verification NonEmptyList {
  "The list should not be empty"
  [A](list: List[A]) => {
    nonEmptyList(list)
  }
}

def nonEmptyList[A](list: List[A]): Boolean => {
  list.nonEmpty()
}

verification IsStringOfLength(length: Number) {
  message("is.string.of.length", Number, Number)
  (string: String) => {
    if (string.length < length) {
      ok
    } else {
      ko(string.length, length)
    }
  }
}